{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=OklahomaTaxEngine;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },
  "AllowedHosts": "*",
  "ApplicationSettings": {
    "ApplicationName": "Oklahoma Tax Engine",
    "Version": "1.0.0",
    "Environment": "Production"
  },
  "CacheSettings": {
    "RuleCacheDurationMinutes": 30,
    "EnableCaching": true
  },
  "ApiSettings": {
    "EnableSwagger": true,
    "SwaggerEndpoint": "/swagger/v1/swagger.json",
    "ApiTitle": "Oklahoma Tax Engine API",
    "ApiVersion": "v1"
  },
  "BusinessRules": {
    "MaxTransactionsPerPage": 50,
    "DefaultPageSize": 20,
    "MaxTaxCalculationAmount": 1000000000,
    "MinTaxCalculationAmount": 0
  },
  "SecuritySettings": {
    "EnableCORS": true,
    "AllowedOrigins": ["*"],
    "RequireHttps": true
  }
}